<%= form_with model: task do |form| %>
  <strong><p><%= form.label :name %></p></strong>
  <p>
    <%= form.text_field :name %>
    <% if @task.errors.full_messages_for(:name).any?%>
      <small><i><%= @task.errors.full_messages_for(:name).join(', ')%></i></small>
    <% end %>
  </p>
  <strong><p><%= form.label :description %></p></strong>
  <p>
    <%= form.text_area :description, size: "60x10" %>
    <% if @task.errors.full_messages_for(:description).any?%>
      <small><i><%= @task.errors.full_messages_for(:description).join(', ')%></i></small>
    <% end %>
  </p>
  <strong><p><%= form.label :creator %></p></strong>
  <p>
    <%= form.text_area :creator, size: "60x1" %>
    <% if @task.errors.full_messages_for(:creator).any?%>
      <small><i><%= @task.errors.full_messages_for(:creator).join(', ')%></i></small>
    <% end %>
  </p>
  
  <strong><p><%= form.label :performer %></p></strong>
  <p>
    <%= form.text_area :performer, size: "60x1" %>
    <% if @task.errors.full_messages_for(:performer).any?%>
      <small><i><%= @task.errors.full_messages_for(:performer).join(', ')%></i></small>
    <% end %>
  </p>
  <%= form.submit %>
<% end %>